#!/bin/bash
chmod +x /interface_setup
/interface_setup
ip rou del default 2> /dev/null
ip route add default via 10.153.0.254 dev net0

echo "ready! run 'docker exec -it $HOSTNAME /bin/zsh' to attach to this node" >&2
for f in /proc/sys/net/ipv4/conf/*/rp_filter; do echo 0 > "$f"; done
sleep 25
python3.7 -u /carla/refactor_automatic_control.py --ws_ip=${WS_IP} --ws_port=${WS_PORT} --host=${CARLA_IP} --port=${CARLA_PORT} --r_name=${ROLE_NAME} --cam=${CAMERA} -l > seed_${ROLE_NAME}.log 2>&1
tail -f /dev/null

